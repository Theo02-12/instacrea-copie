{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@components/*": ["./app/components/*"],
      "@models/*": ["./app/models/*"],
      "@lib/*": ["./app/lib/*"],
      "@types/*": ["./app/types/index"],
      "@tools/*": ["./app/tools/*"],
    }
  },
  "typeRoots": [
    "./node_modules/@types",
    "./types"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
